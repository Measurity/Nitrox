<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Nitrox.Launcher.ViewModels"
        xmlns:design="clr-namespace:Nitrox.Launcher.Models.Design"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Nitrox.Launcher.Views.CreateServerModal"
        d:DataContext="{Binding RelativeSource={RelativeSource AncestorType=viewModels:CreateServerViewModel}}"
        SizeToContent="WidthAndHeight"
        SystemDecorations="None"
        Title="Create a server">
    <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </Window.Styles>
    <StackPanel>
        <TextBlock Text="SERVER NAME" />
        <TextBox design:NitroxAttached.Focus="" Text="{Binding Name}" />
        <TextBlock Text="GAMEMODE" />
        <StackPanel Orientation="Horizontal">
            <RadioButton GroupName="gamemode" Content="Freedom" />
            <RadioButton GroupName="gamemode" Content="Creative" />
            <RadioButton IsChecked="True" GroupName="gamemode" Content="Survival" />
            <RadioButton GroupName="gamemode" Content="Hardcode" />
        </StackPanel>
        <ContentControl VerticalAlignment="Bottom" Background="#ECECEC" Padding="24 20">
            <Panel>
                <Button Classes="nitrox" HotKey="{Binding BackHotkey}" Command="{Binding BackCommand}" Content="Back" HorizontalAlignment="Left" />
                <Button Classes="nitrox primary" HotKey="{Binding CreateHotkey}" Command="{Binding CreateServerCommand}" Content="Create" HorizontalAlignment="Right" />
            </Panel>
        </ContentControl>
    </StackPanel>
</Window>