<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Nitrox.Launcher.ViewModels"
             x:Class="Nitrox.Launcher.Views.PlayView"
             d:DataContext="{Binding RelativeSource={RelativeSource AncestorType=viewModels:PlayViewModel}}">
    
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <TextBlock Text="{Binding Greeting}" />
        <TextBlock Text="{Binding UrlPathSegment}" />
    </StackPanel>
</UserControl>