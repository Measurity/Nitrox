<Style
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style.Resources>
        <!-- Main colors -->
        <Color x:Key="BrandPrimary">#007BFF</Color>
        <SolidColorBrush Color="{DynamicResource BrandPrimary}" x:Key="BrandPrimaryBrush" />
        <Color x:Key="BrandWhite">#FFFFFF</Color>
        <SolidColorBrush Color="{DynamicResource BrandWhite}" x:Key="BrandWhiteBrush" />
        <Color x:Key="BrandBlack">#000000</Color>
        <SolidColorBrush Color="{DynamicResource BrandBlack}" x:Key="BrandBlackBrush" />

        <!-- Notification colors -->
        <Color x:Key="BrandAbort">#FF005C</Color>
        <SolidColorBrush Color="{DynamicResource BrandAbort}" x:Key="BrandAbortBrush" />
    </Style.Resources>
</Style>
